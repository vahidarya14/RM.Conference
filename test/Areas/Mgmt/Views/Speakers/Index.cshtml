@model IEnumerable<test.Speaker>

@{
    ViewData["Title"] = "Index";
}
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item active" aria-current="page">سخنرانان</li>
    </ol>
</nav>
<div class="container-fluid topBar">
    <a asp-action="CreateEdit" class="btn btn-warning">افزودن</a>
</div>
<div class="container">
    <table class="table">
        <thead>
            <tr>
                <th># </th>
                <th>   @Html.DisplayNameFor(model => model.FullName)                </th>
                <th>   @Html.DisplayNameFor(model => model.Degree)                </th>
                <th>   @Html.DisplayNameFor(model => model.Email)                </th>
                <th>   @Html.DisplayNameFor(model => model.Phone)                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>  @Html.DisplayFor(modelItem => item.Id)                    </td>
                    <td>
                        <img class="img-responsive pull-right" src="@(!string.IsNullOrWhiteSpace(item.Avatar)?$"/images/speakers/{item.Avatar}":"images/speaker.jpg")" style="width:50px">
                        @Html.DisplayFor(modelItem => item.FullName)
                    </td>
                    <td>  @Html.DisplayFor(modelItem => item.Degree)                    </td>
                    <td>  @Html.DisplayFor(modelItem => item.Email)                    </td>
                    <td>  @Html.DisplayFor(modelItem => item.Phone)                    </td>
                    <td>
                        @Html.ActionLink("ویرایش", "CreateEdit", new { id = item.Id }, new { @class = "btn btn-warning" })
                        @Html.ActionLink("حذف", "Delete", new { /* id=item.PrimaryKey */ }, new { @class = "btn btn-danger" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

