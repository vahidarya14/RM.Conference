<!DOCTYPE html>
<html lang="en">
<head>
    @*<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />*@
    @*<link rel="stylesheet" href="~/css/site.css" />*@
    <style>
        * {
            direction: rtl;
        }

        li {
            text-align: right;
        }
    </style>
    <!-- Bootstrap -->
    <link rel="stylesheet" href="/theme/eventech/css/bootstrap.min.css">
    <!-- Template styles-->
    <link rel="stylesheet" href="/theme/eventech/css/style.css">
    <!-- Responsive styles-->
    <link rel="stylesheet" href="/theme/eventech/css/responsive.css">
    <!-- FontAwesome -->
    <link rel="stylesheet" href="/theme/eventech/css/font-awesome.min.css">
    <!-- Animation -->
    <link rel="stylesheet" href="/theme/eventech/css/animate.css">
    <!-- Colorbox -->
    <link rel="stylesheet" href="/theme/eventech/css/colorbox.css">

    <style>
        .dismissButton {
            background-color: #fff;
            border: 1px solid #dadce0;
            color: #1a73e8;
            border-radius: 4px;
            font-family: Roboto,sans-serif;
            font-size: 14px;
            height: 36px;
            cursor: pointer;
            padding: 0 24px
        }

            .dismissButton:hover {
                background-color: rgba(66,133,244,0.04);
                border: 1px solid #d2e3fc
            }

            .dismissButton:focus {
                background-color: rgba(66,133,244,0.12);
                border: 1px solid #d2e3fc;
                outline: 0
            }

                .dismissButton:focus:not(:focus-visible) {
                    background-color: #fff;
                    border: 1px solid #dadce0;
                    outline: none
                }

            .dismissButton:focus-visible {
                background-color: rgba(66,133,244,0.12);
                border: 1px solid #d2e3fc;
                outline: 0
            }

            .dismissButton:hover:focus {
                background-color: rgba(66,133,244,0.16);
                border: 1px solid #d2e2fd
            }

                .dismissButton:hover:focus:not(:focus-visible) {
                    background-color: rgba(66,133,244,0.04);
                    border: 1px solid #d2e3fc
                }

            .dismissButton:hover:focus-visible {
                background-color: rgba(66,133,244,0.16);
                border: 1px solid #d2e2fd
            }

            .dismissButton:active {
                background-color: rgba(66,133,244,0.16);
                border: 1px solid #d2e2fd;
                box-shadow: 0 1px 2px 0 rgba(60,64,67,0.3),0 1px 3px 1px rgba(60,64,67,0.15)
            }

            .dismissButton:disabled {
                background-color: #fff;
                border: 1px solid #f1f3f4;
                color: #3c4043
            }
    </style>


    <!-- Basic Page Needs    ================================================== -->
    <!-- Mobile Specific Metas    ================================================== -->
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0">

    <!-- Site Title -->
    <title>@ViewData["Title"] -همایش</title>

    <!--Favicon-->
    <link rel="shortcut icon" href="/favicon.png" type="image/x-icon">
    <link rel="icon" href="/favicon.png" type="image/x-icon">

</head>
<body>
    <header style="background: #776300;">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                @*<a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">test</a>*@
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1 navbar-right">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">
                                <span class="glyphicon glyphicon-home"></span>
                                خانه
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">قوانین و مقررات</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="AboutUs">درباره ما</a>
                        </li>
                    </ul>

                    <ul class="navbar-nav navbar-left flex-grow-1 ">
                        <li class="dropdown ">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                            @(User.Identity.Name??"پنل کاربری")  <span class="glyphicon glyphicon glyphicon-user"></span>
                            </a>
                            <ul class="dropdown-menu">

                                @using Microsoft.AspNetCore.Identity
                                @inject SignInManager<User> SignInManager
                                @if (SignInManager.IsSignedIn(User))
                                {
                                    <li><a class="nav-link text-dark" asp-area="Mgmt" asp-controller="Settings" asp-action="Index">مدیریت</a></li>

                                    <li class="nav-item">
                                        <a class="nav-link btn btn-link text-dark" asp-controller="account" asp-action="Logout">خروج</a>
                                    </li>
                                }
                                else
                                {
                                    <li class="nav-item">
                                        <a class="nav-link text-dark" asp-controller="account" asp-action="Register">ثبت نام</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link text-dark" asp-controller="account" asp-action="login">ورود</a>
                                    </li>
                                }
                            </ul>
                        </li>
                        <li><a href="#about"><span class="glyphicon glyphicon-search"></span></a></li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>


    <div class="body-inner">

        <div style="min-height:300px;">

            @if (IsSectionDefined("topBanner"))
            { RenderSectionAsync("topBanner", required: false); }

            @if (IsSectionDefined("breadCrumb"))
            {
                <div class="container">
                    <nav aria-label="breadcrumb" style=" border-bottom: 1px solid gold; margin-top: 10px;">
                        <ol class="breadcrumb">
                            @await RenderSectionAsync("breadCrumb", required: false)
                        </ol>
                    </nav>
                </div>

            }


            @RenderBody()
        </div>




        <footer id="footer" class="footer text-center mt-5">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">

                        <img src="/theme/eventech/images/footer-logo.png" alt="footer logo">

                        <div class="footer-social">
                            <ul>
                                <li><a href="#"><i class="fa fa-facebook"></i></a></li>
                                <li><a href="#"><i class="fa fa-twitter"></i></a></li>
                                <li><a href="#"><i class="fa fa-google-plus"></i></a></li>
                                <li><a href="#"><i class="fa fa-linkedin"></i></a></li>
                                <li><a href="#"><i class="fa fa-instagram"></i></a></li>
                            </ul>
                        </div><!-- Footer social end -->

                        <div class="footer-menu">
                            <ul class="nav unstyled">
                                <li><a href="#">درباره ما</a></li>
                                <li><a href="#">سخنرانان</a></li>
                                <li><a href="#">حامی مالی شوید</a></li>
                                <li><a href="#">تصاویر</a></li>
                                <li><a href="#">اخبار</a></li>
                                <li><a href="#">تماس با ما</a></li>
                            </ul>
                        </div><!-- Footer menu end -->

                        <div class="copyright-info">
                            <span> © @DateTime.Today.ToPersian2().y  تمامی حقوق سایت محفوض میباشد</span>
                        </div><!-- Copyright info end -->

                    </div><!-- Content col end -->
                </div><!-- Content row end -->
            </div><!-- Container end -->

            <div class="footer-pattern"></div> <!-- Footer pattern image -->

            <div id="back-to-top" data-spy="affix" data-offset-top="10" class="back-to-top affix" style="display: block;">
                <button class="btn btn-primary" title="Back to Top">
                    <i class="fa fa-angle-up"></i>
                </button>
            </div>

        </footer><!-- Footer end -->
        <!-- Javascript Files
        ================================================== -->
        <!-- initialize jQuery Library -->
        <script src="/theme/eventech/js/jquery.js"></script>
        <!-- Bootstrap jQuery -->
        <script type="text/javascript" src="/theme/eventech/js/bootstrap.min.js"></script>
        <!-- Waypoints -->
        <script type="text/javascript" src="/theme/eventech/js/waypoints.min.js"></script>
        <!-- Color box for Popup-->
        <script type="text/javascript" src="/theme/eventech/js/jquery.colorbox.js"></script>
        <!-- Smoothscroll -->
        <script type="text/javascript" src="/theme/eventech/js/smoothscroll.js"></script>
        <!-- Google Map -->
        <script type="text/javascript" src="//maps.googleapis.com/maps/api/js?key=AIzaSyCsa2Mi2HqyEcEnM1urFSIGEpvualYjwwM"></script>
        <!-- Doc https://developers.google.com/maps/documentation/javascript/get-api-key -->
        <!-- For latitude and longitude use http://www.latlong.net/ -->

        <script type="text/javascript" src="/theme/eventech/js/gmap3.min.js"></script>



        <!-- Template custom -->
        @*<script type="text/javascript" src="/js/custom.js"></script>*@

    </div>


    <script src="/theme/eventech/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
