@model UserLoginDto
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container">
  
    @Html.ValidationSummary()
    <form asp-action="Login" asp-controller="Account" method="post">

        <div class="logindiv">

            <div class="form-group col-sm-12">
                <label asp-for="@Model.Email" class="col-lg-3 control-label">ایمیل</label>
                <br>
                <div class="col-lg-9">
                    @Html.TextBoxFor(m => m.Email, new { placeholder = "ایمیل", @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Email)
                </div>
            </div>

            <div class="form-group col-sm-12">
                <label asp-for="@Model.Password" class="col-lg-3 control-label">رمز عبور</label>
                <br>
                <div class="col-lg-9">
                    @Html.PasswordFor(m => m.Password, new { placeholder = "رمز عبور", @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Password)
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-12 btn-submit">
                    <button type="submit" class="btn btn-success">ورود</button>
                    <a asp-action="Register" asp-controller="account">هنوز عضو سایت نشده اید؟</a>

                </div>
            </div>
        </div>
    </form>
</div>  